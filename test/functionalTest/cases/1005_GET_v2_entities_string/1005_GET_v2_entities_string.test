# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
GET Entities V2 string

--SHELL-INIT--
dbInit CB
brokerStart CB

--SHELL--

#
# 01. POST /v1/updateContext
# 03. GET /v2/entities
#

echo "01. POST /v1/updateContext"
echo "=========================="
payload='{
  "contextElements": [
    {
      "id":   "8787GHY",
      "type": "Car",
      "attributes" : [
        {
          "name" : "speed",
          "type": "number",
          "value" : 150
        },
        {
          "name" : "brand",
          "type": "string",
          "value" : "Mercedes Benz"
        },
        {
          "name" : "plateCountry",
          "value" : "ES"
        },
        {
          "name" : "madeInCountry",
          "value" : "DE",
          "type" : ""
        },
        {
          "name" : "model",
          "type": "myString",
          "value" : "Klasse C"
        }
      ]
    }
  ],
  "updateAction": "APPEND"
}'
orionCurl --url /v1/updateContext --payload "$payload" --json
echo
echo

echo "02. GET /v2/entities"
echo "===================="
orionCurl --url /v2/entities --json
echo
echo

--REGEXPECT--
01. POST /v1/updateContext
==========================
HTTP/1.1 200 OK
Content-Length: 841
Content-Type: application/json
Date: REGEX(.*)

{
    "contextResponses": [
        {
            "contextElement": {
                "attributes": [
                    {
                        "name": "speed",
                        "type": "number",
                        "value": ""
                    },
                    {
                        "name": "brand",
                        "type": "string",
                        "value": ""
                    },
                    {
                        "name": "plateCountry",
                        "type": "",
                        "value": ""
                    },
                    {
                        "name": "madeInCountry",
                        "type": "",
                        "value": ""
                    },
                    {
                        "name": "model",
                        "type": "myString",
                        "value": ""
                    }
                ],
                "id": "8787GHY",
                "isPattern": "false",
                "type": "Car"
            },
            "statusCode": {
                "code": "200",
                "reasonPhrase": "OK"
            }
        }
    ]
}


02. GET /v2/entities
====================
HTTP/1.1 200 OK
Content-Length: 155
Content-Type: application/json
Date: REGEX(.*)

[
    {
        "brand": "Mercedes Benz",
        "id": "8787GHY",
        "madeInCountry": "DE",
        "model": {
            "type": "myString",
            "value": "Klasse C"
        },
        "plateCountry": "ES",
        "speed": 150,
        "type": "Car"
    }
]


--TEARDOWN--
brokerStop CB
dbDrop CB
